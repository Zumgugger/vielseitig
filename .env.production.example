# Production Environment Variables for Vielseitig
# Copy this to .env and update with real values

# REQUIRED: Secret key for session encryption (generate with: openssl rand -hex 32)
SECRET_KEY=CHANGE_ME_TO_A_SECURE_RANDOM_STRING

# Database (SQLite path inside container - MUST use aiosqlite driver for async)
DATABASE_URL=sqlite+aiosqlite:///./data/vielseitig.db

# OPTIONAL: Twilio SMS notifications (for admin alerts on new registrations)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
ADMIN_PHONE_NUMBER=
